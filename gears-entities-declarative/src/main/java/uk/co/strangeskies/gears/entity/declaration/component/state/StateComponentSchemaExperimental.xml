<?xml version="1.1"?>
<modelSchema>

	<factory
		class="uk.co.strangeskies.gears.entity.state.StateComponentConfigurator"
		factoryClass="uk.co.strangeskies.gears.entity.state.StateComponentFactory" />

	<factory
		class="uk.co.strangeskies.gears.entity.state.BehaviourComponentConfigurator"
		factoryClass="uk.co.strangeskies.gears.entity.state.BehaviourComponentFactory"
		method="create" />

	<model name="set">
		<initialiser class="java.util.Set">
			<sequence>
				<element callMethod="add" />
			</sequence>
		</initialiser>
	</model>

	<model name="integer">
		<initialiser class="java.lang.Integer">

		</initialiser>
	</model>

	<model name="pooFactory">
		<provider class="uk.co.strangeskies.gears.utilities.Factory">
			<element provideMethod="create">() => { return new poo(); }</element>
		</provider>
	</model>

	<model name="weeFactory">
		<provider class="uk.co.strangeskies.gears.utilities.Factory">
			<element provideReturnValue="create" model="wee" />
		</provider>
	</model>

	<model name="stateComponent"
		class="uk.co.strangeskies.gears.entity.state.StateComponent">
		<builder
			class="uk.co.strangeskies.gears.entity.state.StateComponentConfigurator"
			method="create">

			<element name="name" type="string" maxOccurs="1" minOccurs="1" />

			<element name="description" type="string" maxOccurs="1"
				minOccurs="0" />

			<initialiser name="readDependencies" class="java.util.Set">
				<sequence min="1" max="0">
					<methodCall name="add">
						<element name="dependency" model="string" />
					</methodCall>
				</sequence>
			</initialiser>

			<element name="readDependencies" maxOccurs="1" minOccurs="0"
				type="dependencies" />

			<element name="writeDependencies" maxOccurs="1" minOccurs="0"
				type="dependencies" />

			<element name="data" maxOccurs="1" minOccurs="1">
				<sequence>
					<element name="type" type="string" maxOccurs="1" minOccurs="1" />

					<element type="factory" name="factory" maxOccurs="1"
						minOccurs="1" />
				</sequence>
			</element>

			<element name="properties" maxOccurs="1" minOccurs="1">
				<complexType>
					<sequence>
						<element name="property" minOccurs="1" maxOccurs="unbounded">
							<complexType>
								<sequence>
									<element name="name" type="string" maxOccurs="1"
										minOccurs="1" />

									<element name="type" type="string" maxOccurs="1"
										minOccurs="1" />

									<element name="factory" type="factory" minOccurs="0" />
								</sequence>
							</complexType>
						</element>
					</sequence>
				</complexType>
			</element>

		</builder>
	</model>

	<element type="stateComponent" />

</modelSchema>
