<behaviourComponent>
	<name>Movement</name>

	<description>The behaviour of simple movement</description>

	<process>
		<script language="javascript" file="uk/co/strangeskies/gears/something/movement.js" /> <!-- language = optional attribute in case extension is non standard or ambiguous -->

		<script language="js" execution="implementation">
			function process(Set entities, LockedStates locks) {
			println('do summat with
			entities on states which are locked...');
			}
		</script>

		<script language="js" execution="factory">
			new uk.co.strangeskies.gears.something.Movement ( Velocity , Position )
		</script>
	</process>

	<readDependencies>
		<dependency>Velocity</dependency>
	</readDependencies>

	<writeDependencies>
		<dependency>Position</dependency>
	</writeDependencies>

	<behaviourDependencies>
		<dependency>Map Input</dependency>
	</behaviourDependencies>

	<behaviourDependents>
		<dependent>Render</dependent>
	</behaviourDependents>
</behaviourComponent>
