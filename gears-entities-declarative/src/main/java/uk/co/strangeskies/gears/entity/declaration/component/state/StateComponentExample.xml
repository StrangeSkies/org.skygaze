

<stateComponent>
	<name>Position</name>

	<description>The position of an Entity</description>

	<readDependencies>
		<dependency>Angle</dependency>
		<dependency>Scale</dependency>
	</readDependencies>

	<writeDependencies>
		<dependency>Effective Translation</dependency>
	</writeDependencies>

	<data>
		<type>uk.co.strangeskies.gears.something.Vector2</type>

		<factory source="script">
			<language>javascript</language> <!-- optional tag in case extension is non standard or ambiguous -->

			<sourceFile>uk/co/strangeskies/gears/createVector2.js</sourceFile>
		</factory>
		<!-- OR -->
		<factory source="script">
			<language>javascript</language>

			<source>
				function create() {
				return null;
				}
			</source>
		</factory>
		<!-- OR -->
		<factory source="class">
			<name>uk.co.strangeskies.gears.utilities.CopyFactory</name>

			<constructorParameters> <!-- optional (else default) -->
				<parameter>Position</parameter>
			</constructorParameters>
		</factory>
		<!-- OR -->
		<factory source="method">
			<name>uk.co.strangeskies.gears.CreateStuff.createVector2</name>
		</factory>

		<properties>
			<property>
				<name>Position</name>

				<type>Vector2</type>

				<functionFromData>IdentityFunction</functionFromData>
			</property>
		</properties>
	</data>
</stateComponent>



<behaviourComponent>
	<name>Movement</name>

	<description>The behaviour of simple movement</description>

	<process source="script">
		<language>javascript</language> <!-- optional tag in case extension is non standard or ambiguous -->

		<scriptParameters> <!-- optional -->
			<parameter>Velocity</parameter>
			<parameter>Position</parameter>
		</scriptParameters>

		<sourceFile>uk/co/strangeskies/gears/something/movement.js</sourceFile>
	</process>
	<!-- OR -->
	<process source="script">
		<language>javascript</language>

		<scriptParameters> <!-- optional -->
			<parameter>Velocity</parameter>
			<parameter>Position</parameter>
		</scriptParameters>

		<source>
			function process(Set entities, LockedStates locks) {
			println('do
			summat with entities on states which are locked...');
			}
		</source>
	</process>
	<!-- OR -->
	<process source="class">
		<name>uk.co.strangeskies.gears.something.Movement</name>

		<constructorParameters> <!-- optional (else default) -->
			<parameter>Velocity</parameter>
			<parameter>Position</parameter>
		</constructorParameters>
	</process>
	<!-- OR -->
	<process source="method">
		<name>uk.co.strangeskies.gears.something.Movement.movement</name>

		<methodParameters> <!-- optional (else default) -->
			<parameter>Velocity</parameter>
			<parameter>Position</parameter>
		</methodParameters>
	</process>

	<readDependencies>
		<dependency>Velocity</dependency>
	</readDependencies>

	<writeDependencies>
		<dependency>Position</dependency>
	</writeDependencies>

	<behaviourDependencies>
		<dependency>Map Input</dependency>
	</behaviourDependencies>

	<behaviourDependents>
		<dependent>Render</dependent>
	</behaviourDependents>
</behaviourComponent>